<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<!--<suite name="ESGC Smoke Suite" verbose="2" parallel="methods" thread-count="8">-->
<suite name="ESGC Smoke Suite" verbose="2">
    <listeners>
        <listener class-name="com.esgc.Utilities.XrayListener"/>
        <listener class-name="com.esgc.Reporting.Listeners"/>
    </listeners>
    <test name="ESGC Smoke Test">

        <parameter name="reportName" value="Smoke Test Report"/>

        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>

        <packages>
            <package name="com.esgc.Tests.UI.*"/>
        </packages>


    </test>

</suite>