<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<!--<suite name="ESGC Smoke Suite" verbose="2" parallel="methods" thread-count="8">-->
<suite name="ESGC Smoke Suite" verbose="2" parallel="classes" thread-count="8">
    <listeners>
        <listener class-name="com.esgc.Utilities.XrayListener"/>
        <listener class-name="com.esgc.Reporting.Listeners"/>
    </listeners>
    <test name="ESGC Smoke Test">

        <parameter name="reportName" value=" Test Report"/>

        <groups>
            <run>
                <include name="smoke"/>
                <exclude name="robot_dependency"></exclude>
            </run>
        </groups>

        <packages>
            <package name="com.esgc.Tests.UI.*"/>
           <!-- <package name="com.esgc.Tests.API.*"/>
            <package name="com.esgc.Tests.DataValidation.*"/>-->
        </packages>


    </test>

</suite>